    "@heroicons/react": "^1.0.6",
    "@prisma/client": "^4.2.0",
    "@remix-run/node": "^1.7.0",
    "@remix-run/react": "^1.7.0",
    "@remix-run/serve": "^1.7.0",
    "@remix-run/vercel": "^1.7.0",
    "@vercel/node": "^2.4.4",
    "@types/bcryptjs": "^2.4.2",
